doctype html

html(lang="ru")

  head

    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    title index page
    link(rel="preload" href="fonts/Roboto.woff2" as="font")
    link(rel="preload" href="fonts/Robotolight.woff2" as="font")
    link(rel="preload" href="fonts/Robotomedium.woff2" as="font")
    link(type="text/css", rel="stylesheet", href="css/rdn-style.css")
    link(type="text/css", rel="stylesheet", href="css/responsive.css")
    

  body
    div(class="page")
    
      header(class="page-header")
        div(class="row page-header__top")
          div(class="content-wrap content-wrap--between")
            //span(class="site-nav-link", id="site-nav__toggle")
            // i(class="site-navbar__icon")*/
            input(type="checkbox", id="site-nav__check-menu", onclick="openNavbar()")
            label(for="site-nav__check-menu", class="site-nav__toggle")
            div(class="burger-line first")
            div(class="burger-line second")
            div(class="burger-line third")
            div(class="burger-line fourth")

            nav(class="site-navbar-resp")
              ul(class="site-nav-resp__list", id="site-nav__menu")
                li(class="site-nav__item"): a(href="./adverts") Объявления
                li(class="site-nav__item"): a(href="#") Магазины
                li(class="site-nav__item"): a(href="./services") Услуги
                li(class="site-nav__item"): a(href="#") Помощь

            a(class="page-header__logo" href="#")
              img(src="img/main-logo.png", alt="main logo")
            form(class="page-header__search form")
              div.row
                label(class="form__label form__label--invisible" for="searchSite") Ссылка на сайт
                input(class="form__item page-header__item-search" type="text" id="searchSite" name="searchSite")
                button(class="btn form__btn" type="submit") Найти
            div.page-header__user-action
              a.page-header__add(href="./add-card") Добавить объявление
              a.page-header__login(href="#") Войдите
              span или
              a.page-header__regin(href="./registration") Зарегистрируйтесь


        div(class="page-header__middle", id="page-header__middle")
          div(class="content-wrap")
            h1(class="page-header__title") Крупнейшая доска бесплатных объявлений

          div(class="content-wrap content-wrap--between")
            div(class="page-header__region")
              div Поиск в регионе: 
              a(href="#")
                span(class="region__text") Все регионы
            nav(class="site-nav")
              ul(class="site-nav__list")
                li(class="site-nav__item"): a(href="./adverts") Объявления
                li(class="site-nav__item"): a(href="#") Магазины
                li(class="site-nav__item"): a(href="./services") Услуги
                li(class="site-nav__item"): a(href="#") Помощь

        div(class="row page-header__bottom")
          div(class="content-wrap content-wrap--center")
            form(class="page-header-resp__search form")
              div.row
                label(class="form__label form__label--invisible" for="searchSite") Ссылка на сайт
                input(class="form__item page-header__item-search" type="text" id="searchSite" name="searchSite" placeholder="Найти")
                button(class="btn form__btn" type="submit") Найти  
                
          
      main(class="page-main page-main--index")
        div(class="content-wrap")

          ul(class = "page-main__list catalog")
            include ./partition.pug
            +partition

      footer(class="page-footer")
        div(class="content-wrap")
          div(class="row")
          
            nav(class="site-nav")

              ul(class="site-nav__list page-footer__list")
                li(class="site-nav__item"): a(href="#") Ads
                li(class="site-nav__item"): a(href="./services") Services
                li(class="site-nav__item"): a(href="#") Advertisign
                li(class="site-nav__item"): a(href="#") Contact us

          div(class="row")
          
            nav(class="site-nav")

              ul(class="site-nav__list page-footer__list")
                
                li(class="site-nav__item"): a(href="#") Shops
                li(class="site-nav__item"): a(href="#") Project blog
                li(class="site-nav__item"): a(href="#") Help
                li(class="site-nav__item"): a(href="#") Sitemap
                li(class="site-nav__item"): a(href="./terms-of-use") Agreement

            div(class="page-footer__lang")
              div Язык:
              a(href="#") Русский
  
  script(src="/js/navbar.js")
